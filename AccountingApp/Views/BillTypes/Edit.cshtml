@model AccountingApp.Models.BillType

@{
    ViewData["Title"] = "编辑账单类型";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>账单类型</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TypeName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TypeDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TypeDesc" class="form-control" />
                <span asp-validation-for="TypeDesc" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="CreatedBy" />
        <input type="hidden" asp-for="CreatedTime" />
        <input type="hidden" asp-for="PKID" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
